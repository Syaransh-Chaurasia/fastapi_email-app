# Database connection URL
DATABASE_URL=postgresql://user:password@host:port/dbname

# SMTP settings for sending emails (example: SendGrid)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey                 # For SendGrid SMTP, username must be literally "apikey"
SMTP_PASSWORD=YOUR_SENDGRID_API_KEY

# Email address that appears in the 'From' field of sent emails
FROM_EMAIL="MyApp <no-reply@yourdomain.com>"
